{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "eslint.workingDirectories": [
    { "mode": "auto" }
  ],
  "files.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/.out": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/.out": true
  }
}
